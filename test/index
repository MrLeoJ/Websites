            .header__nav {
                margin-top: 1em;
            }

            .watchlist {
                grid-template-columns: repeat(auto-fill, minmax(120px, 1fr));
            }
        }

        .full-screen-player {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.9);
            z-index: 1000;
        }

        .full-screen-player iframe {
            width: 100%;
            height: 100%;
            border: none;
        }

        .close-player {
            position: absolute;
            top: 20px;
            right: 20px;
            background: none;
            border: none;
            color: white;
            font-size: 24px;
            cursor: pointer;
            z-index: 1001;
