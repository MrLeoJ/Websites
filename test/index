            justify-content: space-between;
            align-items: center;
        }

        .header__title {
            font-size: 1.5em;
            font-weight: 600;
        }

        .header__nav {
            display: flex;
            gap: 1em;
        }

        .header__nav-item {
            cursor: pointer;
            padding: 0.5em 1em;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

        .header__nav-item:hover,
        .header__nav-item--active {
            background-color: rgba(255, 255, 255, 0.2);
        }

        .main {
            max-width: 1200px;
            margin: 2em auto;
            padding: 0 2em;
        }

        .filters {
            display: flex;
            flex-wrap: wrap;
            gap: 1em;
            margin-bottom: 2em;
        }

        .filters__item {
            flex: 1;
            min-width: 150px;
        }

        .filters__select {
            width: 100%;
            padding: 0.5em;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-family: 'Poppins', sans-serif;
        }

        .search-bar {
            width: 100%;
            padding: 0.5em;
            margin-bottom: 2em;
            border: 1px solid #ccc;
